pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'dev', url: 'https://github.com/playthedev/abc-organization.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                sh 'mvn mule:deploy'
            }
        }
    }
}
